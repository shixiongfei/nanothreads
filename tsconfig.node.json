{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "CommonJS",
		"lib": ["ESNext", "WebWorker", "DOM", "ES2022.Array", "es2022"],
		"moduleResolution": "NodeNext",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"allowJs": true,
		"rootDir": ".",
		"declaration": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"importsNotUsedAsValues": "error",
		"preserveValueImports": false,
		"importHelpers": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"strictFunctionTypes": false,
		"skipLibCheck": true,
		"types": ["node"]
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/internals/NodeWorker.ts"],
	"exclude": [
		"node_modules/**/*",
		"src/internals/NodeWorker-esm.mjs",
		"src/internals/NodeWorker-cjs.js",
		"dist/*",
		"index.ts"
	]
}
