{
	"name": "nanothreads",
	"author": "snuffydev",
	"repository": {
		"url": "https://github.com/snuffyDev/nanothreads"
	},
	"license": "ISC",
	"version": "0.2.30",
	"source": "./src/index.ts",
	"description": "a tiny cross-platform Worker & concurrency library",
	"keywords": [
		"threads",
		"worker",
		"concurrency",
		"async",
		"threading",
		"browser",
		"mutex"
	],
	"files": [
		"dist",
		"package.json"
	],
	"main": "./dist/index.cjs.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"scripts": {
		"build": "node ./build.mjs && pnpm run build:dts",
		"build:demo": "tsc --moduleResolution node --target ESNext -m  esnext ./index.ts",
		"build:dts": "tsc --moduleResolution node --target ESNext -m esnext --declaration true --emitDeclarationOnly --rootDir ./src/ --outDir dist",
		"run:esm:node-demo": "node --loader=ts-node/esm --experimental-specifier-resolution=node ./index",
		"run:cjs:node-demo": "node --es-module-specifier-resolution=node ./index.cjs.js",
		"start": "pnpm run build && pnpm run run:esm:node-demo",
		"format": "prettier --write .",
		"test": "size-limit"
	},
	"exports": {
		"node": {
			"node": "./dist/index.cjs.js",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs.js",
			"types": "./dist/index.d.ts"
		},
		"require": "./dist/index.cjs.js",
		"browser": "./dist/index.web.js",
		"module": "./dist/index.js",
		"types": "./dist/index.d.ts"
	},
	"size-limit": [
		{
			"limit": "1 KB",
			"import": "*",
			"path": "src/index.ts"
		}
	],
	"devDependencies": {
		"@size-limit/preset-small-lib": "^8.1.0",
		"@types/node": "^18.8.3",
		"esbuild": "^0.16.13",
		"prettier": "^2.8.0",
		"size-limit": "^8.1.0",
		"ts-node": "^10.9.1",
		"tsup": "^6.5.0",
		"typescript": "^4.9.3"
	}
}
